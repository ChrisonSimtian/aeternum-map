{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "New World Companion",
    "author": "Leon Machens",
    "version": "0.0.1",
    "minimum-overwolf-version": "0.169.0",
    "description": "New World Companion",
    "dock_button_title": "New World Companion",
    "icon": "icons/iconMouseOver.png",
    "icon_gray": "icons/iconMouseNormal.png",
    "launcher_icon": "icons/desktopIcon.ico",
    "window_icon": "icons/taskbarIcon.png"
  },
  "permissions": ["Media", "FileSystem"],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "build/background.html",
        "debug_url": "http://localhost:3000/background.html",
        "is_background_page": true,
        "allow_local_file_access": true
      },
      "desktop": {
        "file": "build/index.html",
        "debug_url": "http://localhost:3000",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        },
        "allow_local_file_access": true
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": []
    },
    "game_events": [],
    "launch_events": [],
    "hotkeys": {},
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": ["http://localhost:6006", "http://localhost:3000"]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
