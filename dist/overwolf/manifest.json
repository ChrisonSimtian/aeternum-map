{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Aeternum Map",
    "author": "Leon Machens",
    "version": "0.4.0",
    "minimum-overwolf-version": "0.169.0",
    "description": "New World Interactive Map",
    "dock_button_title": "Aeternum Map",
    "icon": "icons/iconMouseOver.png",
    "icon_gray": "icons/iconMouseNormal.png",
    "launcher_icon": "icons/desktopIcon.ico",
    "window_icon": "icons/taskbarIcon.png"
  },
  "permissions": ["Hotkeys", "GameInfo", "Media", "FileSystem"],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "background.html",
        "debug_url": "http://localhost:3000/background.html",
        "is_background_page": true,
        "allow_local_file_access": true
      },
      "desktop": {
        "file": "index.html",
        "debug_url": "http://localhost:3000",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1280,
          "height": 720
        },
        "min_size": {
          "width": 1212,
          "height": 699
        },
        "allow_local_file_access": true,
        "popup_blocker": true,
        "mute": true,
        "keep_window_location": true
      },
      "overlay": {
        "file": "index.html",
        "debug_url": "http://localhost:3000",
        "desktop_only": false,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "show_hide_app",
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1280,
          "height": 720
        },
        "min_size": {
          "width": 1212,
          "height": 699
        },
        "allow_local_file_access": true,
        "popup_blocker": true,
        "mute": true,
        "keep_window_location": true
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21816]
    },
    "game_events": [21816],
    "launch_events": [{
      "event": "GameLaunch",
      "event_data": {
        "game_ids": [21816]
      },
      "start_minimized": false
    }],
    "hotkeys": {
      "show_hide_app": {
        "title": "Show/Hide App",
        "action-type": "custom",
        "default": "Ctrl+Up"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": ["http://localhost:6006", "http://localhost:3000"]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
